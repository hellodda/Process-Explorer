<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Process_Explorer.GUI.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Process_Explorer.GUI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:Process_Explorer.GUI.Helpers"
    mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <NavigationView
            x:Name="NavigationViewControl"
            PaneDisplayMode="Top"
            Grid.Row="0"
            IsSettingsVisible="False"
            IsBackEnabled="{x:Bind ContentFrame.CanGoBack, Mode=OneWay}"
            >

            <NavigationView.MenuItems>
                <NavigationViewItem x:Uid="Metrics" helpers:NavigationHelper.NavigateTo="Process_Explorer.GUI.ViewModels.MetricsViewModel"/>
                <NavigationViewItem x:Uid="Actions" helpers:NavigationHelper.NavigateTo="Process_Explorer.GUI.ViewModels.ActionsViewModel"/>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame"/>
        </NavigationView>
        
        <Frame x:Name="TableFrame" Grid.Row="1" Margin="0 -1 0 0"/>
        
    </Grid>
</Page>
