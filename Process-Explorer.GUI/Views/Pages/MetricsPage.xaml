<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Process_Explorer.GUI.Views.MetricsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Process_Explorer.GUI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:charts="using:LiveChartsCore.SkiaSharpView.WinUI"
    xmlns:vm="using:Process_Explorer.GUI.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource SystemChromeMediumColor}">

    <Grid Padding="15">
        <TextBlock Text="Metrics" FontSize="25"/>
        <Border>
            <StackPanel Orientation="Horizontal" Spacing="20" Padding="25" HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical" Spacing="2">
                    <Border Height="320" CornerRadius="10 10 0 0">

                        <Border.Background>
                            <AcrylicBrush TintOpacity="0.2" Opacity="0.2"/>
                        </Border.Background>

                        <StackPanel Spacing="2">
                            <TextBlock Margin="10 10 0 0" Text="Private Bytes"/>
                            <charts:CartesianChart 
                            Series="{Binding PrivateBytesChartSeries, Mode=OneWay}"
                            XAxes="{Binding PrivateBytesXAxes, Mode=OneWay}"
                            YAxes="{Binding PrivateBytesYAxes, Mode=OneWay}"
                            Width="600"
                            Height="300"/>
                        </StackPanel>
                    </Border>

                    <ComboBox
                        Width="600"
                        HorizontalAlignment="Center"
                        ItemsSource="{Binding MemorySizes}"
                        SelectedItem="{Binding SelectedMemVarPrivateBytes, Mode=TwoWay}"
                        SelectedValuePath="Value"
                        DisplayMemberPath="Name" 
                        CornerRadius="0 0 10 10"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Spacing="2">
                    <Border Height="320" CornerRadius="10 10 0 0">

                        <Border.Background>
                            <AcrylicBrush TintOpacity="0.2" Opacity="0.2"/>
                        </Border.Background>

                        <StackPanel Spacing="2">
                            <TextBlock Margin="10 10 0 0" Text="Working Set"/>
                            <charts:CartesianChart 
                            Series="{Binding WorkingSetChartSeries, Mode=OneWay}"
                            XAxes="{Binding WorkingSetXAxes, Mode=OneWay}"
                            YAxes="{Binding WorkingSetYAxes, Mode=OneWay}"
                            Width="600"
                            Height="300"/>
                        </StackPanel>
                    </Border>

                    <ComboBox
                     Width="600"
                     HorizontalAlignment="Center"
                     ItemsSource="{Binding MemorySizes}"
                     SelectedItem="{Binding SelectedMemVarWorkingSet, Mode=TwoWay}"
                     SelectedValuePath="Value"
                     DisplayMemberPath="Name" 
                     CornerRadius="0 0 10 10"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
