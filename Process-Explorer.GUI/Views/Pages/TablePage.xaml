<Page
    x:Class="Process_Explorer.GUI.Views.Pages.TablePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Process_Explorer.GUI.Views.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tv="using:WinUI.TableView"
    mc:Ignorable="d">

    <Grid>
        <tv:TableView x:Name="TableView"
                      x:Uid="TableView"
                      ItemsSource="{x:Bind _viewModel.ProcessList}"
                      AutoGenerateColumns="False">

            <tv:TableView.AlternateRowBackground>
                <AcrylicBrush FallbackColor="{ThemeResource SystemAccentColor}" TintColor="{ThemeResource SystemAccentColor}" Opacity="0.1" TintOpacity="0.1"/>
            </tv:TableView.AlternateRowBackground>

            <tv:TableView.Columns>
                <tv:TableViewTemplateColumn MaxWidth="40">
                    <tv:TableViewTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding IconSource}"/>
                        </DataTemplate>
                    </tv:TableViewTemplateColumn.CellTemplate>
                </tv:TableViewTemplateColumn>

                <tv:TableViewTextColumn IsReadOnly="True" Header="PID" x:Uid="PIDColumn" Binding="{Binding PID}" />
                <tv:TableViewTextColumn IsReadOnly="True" Header="Name" x:Uid="NameColumn" Binding="{Binding Name}" />
                <tv:TableViewTextColumn IsReadOnly="True" Header="PrivateBytes" x:Uid="PrivateBytesColumn" Binding="{Binding PrivateBytes}" />
                <tv:TableViewTextColumn IsReadOnly="True" Header="WorkingSet" x:Uid="WorkingSetColumn" Binding="{Binding WorkingSet}" />
                <tv:TableViewTextColumn IsReadOnly="True" Header="Cpu" x:Uid="CpuColumn" Binding="{Binding CpuUsage}" />
                <tv:TableViewTextColumn IsReadOnly="True" Header="Company" x:Uid="CompanyColumn" Binding="{Binding Company}" />
                <tv:TableViewTextColumn IsReadOnly="True" Header="Description" x:Uid="DescriptionColumn" Binding="{Binding Description}" MaxWidth="450"/>
            </tv:TableView.Columns>
        </tv:TableView>
    </Grid>
</Page>
